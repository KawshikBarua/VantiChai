<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/margin_1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/amountLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_3"
            android:layout_weight="1"
            android:text="@string/taka"
            android:textColor="#A10A0A"
            android:textSize="34sp" />

        <TextView
            android:id="@+id/textView15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_5"
            android:layout_weight="1"
            android:text="@string/emp"
            android:textColor="@color/red"
            android:textSize="34sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_3"
        android:layout_weight="1"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/margin_1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/amount500"
                    android:layout_width="@dimen/amount_width"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:text="@string/five_hundred"
                    android:textAlignment="viewEnd"
                    android:textColor="@color/red"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/num500"
                    android:layout_width="@dimen/amount_width"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:text="@string/zero"
                    android:textAlignment="center"
                    android:textColor="@color/red"
                    android:textSize="24sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_4"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/amount100"
                    android:layout_width="@dimen/amount_width"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:text="@string/one_hundred"
                    android:textAlignment="viewEnd"
                    android:textColor="@color/red"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/num100"
                    android:layout_width="@dimen/amount_width"
                    android:layout_height="match_parent"
                    android:layout_weight="0"
                    android:text="@string/zero"
                    android:textAlignment="center"
                    android:textColor="@color/red"
                    android:textSize="24sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_4"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/amount50"
                    android:layout_width="@dimen/amount_width"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:text="@string/fifty"
                    android:textAlignment="viewEnd"
                    android:textColor="@color/red"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/num50"
                    android:layout_width="@dimen/amount_width"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:text="@string/zero"
                    android:textAlignment="center"
                    android:textColor="@color/red"
                    android:textSize="24sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_4"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/amount20"
                    android:layout_width="@dimen/amount_width"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:text="@string/twenty"
                    android:textAlignment="viewEnd"
                    android:textColor="@color/red"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/num20"
                    android:layout_width="@dimen/amount_width"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:text="@string/zero"
                    android:textAlignment="center"
                    android:textColor="@color/red"
                    android:textSize="24sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_4"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/amount10"
                    android:layout_width="@dimen/amount_width"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:text="@string/ten"
                    android:textAlignment="viewEnd"
                    android:textColor="@color/red"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/num10"
                    android:layout_width="@dimen/amount_width"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:text="@string/zero"
                    android:textAlignment="center"
                    android:textColor="@color/red"
                    android:textSize="24sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_4"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/amount5"
                    android:layout_width="@dimen/amount_width"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:text="@string/five"
                    android:textAlignment="viewEnd"
                    android:textColor="@color/red"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/num5"
                    android:layout_width="@dimen/amount_width"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:text="@string/zero"
                    android:textAlignment="center"
                    android:textColor="@color/red"
                    android:textSize="24sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_4"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/amount2"
                    android:layout_width="@dimen/amount_width"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:text="@string/two"
                    android:textAlignment="viewEnd"
                    android:textColor="@color/red"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/num2"
                    android:layout_width="@dimen/amount_width"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:text="@string/zero"
                    android:textAlignment="center"
                    android:textColor="@color/red"
                    android:textSize="24sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_4"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/amount1"
                    android:layout_width="@dimen/amount_width"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:text="@string/one"
                    android:textAlignment="viewEnd"
                    android:textColor="@color/red"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/num1"
                    android:layout_width="@dimen/amount_width"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:text="@string/zero"
                    android:textAlignment="center"
                    android:textColor="@color/red"
                    android:textSize="24sp" />
            </LinearLayout>

        </LinearLayout>

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/margin_1">

                <Button
                    android:id="@+id/button1"
                    android:layout_width="@dimen/button_width"
                    android:layout_height="@dimen/button_height"
                    android:layout_weight="0"
                    android:text="1"
                    android:textSize="@dimen/textSizeSmall" />

                <Button
                    android:id="@+id/button2"
                    android:layout_width="@dimen/button_width"
                    android:layout_height="@dimen/button_height"
                    android:layout_weight="0"
                    android:text="2"
                    android:textSize="@dimen/textSizeSmall" />

                <Button
                    android:id="@+id/button3"
                    android:layout_width="@dimen/button_width"
                    android:layout_height="@dimen/button_height"
                    android:layout_weight="0"
                    android:text="3"
                    android:textSize="@dimen/textSizeSmall" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/button4"
                    android:layout_width="@dimen/button_width"
                    android:layout_height="@dimen/button_height"
                    android:text="4"
                    android:textSize="@dimen/textSizeSmall" />

                <Button
                    android:id="@+id/button5"
                    android:layout_width="@dimen/button_width"
                    android:layout_height="@dimen/button_height"
                    android:text="5"
                    android:textSize="@dimen/textSizeSmall" />

                <Button
                    android:id="@+id/button6"
                    android:layout_width="@dimen/button_width"
                    android:layout_height="@dimen/button_height"
                    android:text="6"
                    android:textSize="@dimen/textSizeSmall" />
            </TableRow>
            *

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/button7"
                    android:layout_width="@dimen/button_width"
                    android:layout_height="@dimen/button_height"
                    android:text="7"
                    android:textSize="@dimen/textSizeSmall" />

                <Button
                    android:id="@+id/button8"
                    android:layout_width="@dimen/button_width"
                    android:layout_height="@dimen/button_height"
                    android:text="8"
                    android:textSize="@dimen/textSizeSmall" />

                <Button
                    android:id="@+id/button9"
                    android:layout_width="@dimen/button_width"
                    android:layout_height="@dimen/button_height"
                    android:text="9"
                    android:textSize="@dimen/textSizeSmall" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/button0"
                    android:layout_width="@dimen/button_width"
                    android:layout_height="@dimen/button_height"
                    android:text="0"
                    android:textSize="@dimen/textSizeSmall" />

                <Button
                    android:id="@+id/buttonClear"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/button_height"
                    android:layout_weight="1"
                    android:text="Clear"
                    android:textSize="@dimen/textSizeSmall" />
            </TableRow>
        </TableLayout>

    </LinearLayout>
</LinearLayout>